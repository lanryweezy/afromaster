rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read access to mastered tracks (for sharing)
    match /users/{userId}/tracks/{trackId} {
      allow read: if true; // Public read access for mastered tracks
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
